<?xml version="1.0" encoding="UTF-8"?>

<component name="VideoPlayer" extends="Video">
    <script type="text/brightscript" uri="VideoPlayerSponsorBlock.bs" />
    <script type="text/brightscript" uri="VideoPlayerCaptions.bs" />
    <interface>
        <field id="chapter" type="string" alias="chapterLabel.text" />
        <field id="videoId" type="string" />
    </interface>
    <children>
        <SponsorBlockTask
            functionName="TaskMain"
            id="SponsorBlockTask" />
        <VideoDetailsTask
            functionName="TaskMain"
            id="VideoDetailsTask" />

        <Label
            id="chapterLabel"
            width="350"
            height="25"
            horizAlign="center"
            vertAlign="center"
            font="font:SmallestSystemFont"
        />
        <Timer
            id="chapterLabelTimer"
            repeat="true"
            duration="0.25"
        />
    </children>
</component>
<?xml version="1.0" encoding="UTF-8"?>

<component name="VideoRowCell" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="OnContentSet" />
    </interface>
    <children>
        <LayoutGroup
            itemSpacings="[24,5,5]"
        >
            <Poster
                id="thumbnail"
                loadDisplayMode="scaleToZoom"
                width="350"
                height="196"
            >
                <Rectangle
                    id="durationRect"
                    width="60"
                    height="25"
                    color="0x000000"
                    opacity="0.8"
                    translation="[290, 162]"
                >
                    <Label
                        width="60"
                        height="25"
                        id="durationLabel"
                        horizAlign="center"
                        vertAlign="center"
                        font="font:SmallestSystemFont"
                    />
                </Rectangle>
                <Rectangle
                    id="liveRect"
                    width="60"
                    height="25"
                    color="0xFF0000"
                    translation="[290, 162]"
                >
                    <Label
                        width="60"
                        height="25"
                        id="liveLabel"
                        horizAlign="center"
                        vertAlign="center"
                        font="font:SmallestBoldSystemFont"
                        text="LIVE"
                    />
                </Rectangle>
            </Poster>

            <RichLabel
                id="titleLabel"
                width="350"
                font="font:SmallestBoldSystemFont"
                richFont="bold 18px NotoSans"
                maxLines="2"
                wrap="true"
            />
            <RichLabel
                id="authorLabel"
                width="350"
                height="25"
                font="font:SmallestSystemFont"
                richFont="18px NotoSans"
            />
            <Label
                id="viewCountDateLabel"
                width="350"
                height="25"
                font="font:SmallestSystemFont"
            />
        </LayoutGroup>
    </children>
</component>
<?xml version="1.0" encoding="UTF-8"?>

<component name="NavBar" extends="Group">
    <interface>
        <field id="focusIndex" type="int" alwaysNotify="true" />
        <field id="escapeIndex" type="int" alwaysNotify="true" />
      </interface>    
    <children>
        <Rectangle
            height="720"
            width="80"
            color="#242424"
            opacity="0.9">
            <ButtonGroup
                id="NavBarButtonGroup"
                itemSpacings="[2]"
                translation="[7, 120]">
                <IconButton
                    id="searchButton"
                    background="#242424"
                    focusBackground="#E5252B"
                    padding="20"
                    icon="pkg:/images/icons/search.png"
                    text="Search"
                    height="50"
                    width="80" />
                <IconButton
                    id="homeButton"
                    background="#242424"
                    focusBackground="#E5252B"
                    padding="20"
                    icon="pkg:/images/icons/home.png"
                    text="Home"
                    height="50"
                    width="80" />
                <IconButton
                    id="settingsButton"
                    background="#242424"
                    focusBackground="#E5252B"
                    padding="20"
                    icon="pkg:/images/icons/settings.png"
                    text="Settings"
                    height="50"
                    width="80" />
            </ButtonGroup>
        </Rectangle>
    </children>
</component>
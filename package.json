{
    "name": "playlet",
    "version": "0.6.0",
    "description": "Unofficial Youtube client for Roku",
    "dependencies": {
        "bslib": "npm:@rokucommunity/bslib@^0.1.1",
        "log": "npm:roku-log@^0.9.3",
        "roku-requests": "^1.1.0"
    },
    "devDependencies": {
        "@rokucommunity/bslint": "^0.8.1",
        "@types/node": "^18.11.18",
        "argparse": "^2.0.1",
        "brighterscript": "^0.61.3",
        "brighterscript-formatter": "^1.6.23",
        "convert-svg-to-png": "^0.6.4",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "http-server": "^14.1.1",
        "ip": "^1.1.8",
        "roku-log-bsc-plugin": "^0.7.0",
        "ropm": "^0.10.11",
        "semver": "^7.3.8",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "ropm": {
        "rootDir": "playlet-lib/src",
        "noprefix": [
            "roku-requests"
        ]
    },
    "scripts": {
        "dev:web": "cd playlet-web && npm run dev",
        "dev:lib": "npx http-server ./out",
        "prebuild": "rm -rf dist",
        "build:web": "cd playlet-web && npm run build",
        "build": "npm run build:web && npm run build:lib && npm run build:app",
        "build:lib": "cd playlet-lib && bsc --create-package",
        "build:app": "cd playlet && bsc",
        "build:dev": "npm run manifest-symbols -- DEBUG=true && npm run build",
        "build:prod": "npm run manifest-symbols -- DEBUG=false && npm run build -- --sourceMap=false",
        "build:release": "npm run format:fix && npm run lint:fix && npm run manifest-version && npm run generate-images && npm run build:prod && npm run zip-package && npm run sign-package",
        "lint": "bslint --project playlet-lib/bsconfig.lint.json --lintConfig config/bslint.jsonc && bslint --project playlet/bsconfig.lint.json --lintConfig config/bslint.jsonc",
        "lint:fix": "npm run lint -- --fix",
        "format:base": "bsfmt \"playlet/src/**/*.brs\" \"playlet/src/**/*.bs\" \"!playlet/src/components/lib/**/*\" \"!playlet/src/source/lib/**/*\" \"!**/bslib.brs\" \"!**/roku_modules/**/*\" \"playlet-lib/src/**/*.brs\" \"playlet-lib/src/**/*.bs\" \"!playlet-lib/src/components/lib/**/*\" \"!playlet-lib/src/source/lib/**/*\" \"!**/bslib.brs\" \"!**/roku_modules/**/*\" --bsfmt-path \"config/bsfmt.jsonc\"",
        "format": "npm run format:base -- --check",
        "format:fix": "npm run format:base -- --write",
        "generate-images": "node scripts/generate-images.js",
        "manifest-version": "node scripts/update-manifest-version.js",
        "zip-package": "node scripts/zip-package.js",
        "sign-package": "node scripts/sign-package.js",
        "screenshot": "node scripts/screenshot.js",
        "manifest-symbols": "node scripts/update-manifest-symbols.js",
        "profile-sync": "node scripts/profile-sync.js",
        "postinstall": "npx ropm copy && cd playlet-web && npm install"
    }
}

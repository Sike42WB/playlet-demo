{
    "rootDir": "../src/",
    "files": [
        "source/**/*",
        "components/**/*",
        "images/**/*",
        "fonts/**/*",
        "meta/**/*.*",
        "www/**/*.*",
        "manifest",
        "!**/*.spec.bs"
    ],
    "diagnosticLevel": "error",
    "retainStagingFolder": true,
    "emitDefinitions": true,
    "createPackage": false,
    "sourceMap": true,
    "lintConfig": "config/bslint.jsonc",
    "autoImportComponentScript": true,
    "plugins": [
        "roku-log-bsc-plugin",
        "@rokucommunity/bslint"
    ],
    "rokuLog": {
        "strip": false,
        "insertPkgPath": true
    }
}
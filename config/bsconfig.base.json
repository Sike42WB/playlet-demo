{
    "autoImportComponentScript": true,
    "createPackage": false,
    "diagnosticFilters": [
        {
            "src": "**/roku_modules/**/*.*"
        },
        1090
    ],
    "diagnosticLevel": "error",
    "files": [
        "source/**/*",
        "components/**/*",
        "images/**/*",
        "!images/vector/**/*",
        "fonts/**/*",
        "config/**/*",
        "lib/**/*",
        "www/**/*.*",
        "manifest"
    ],
    "lintConfig": "./config/bslint.jsonc",
    "plugins": [
        "roku-log-bsc-plugin",
        "@rokucommunity/bslint",
        "../tools/bs-plugins/asynctask-plugin.ts",
        "../tools/bs-plugins/manifest-bsconst-debug-plugin.ts"
    ],
    "retainStagingDir": true,
    "require": [
        "ts-node/register"
    ],
    "rokuLog": {
        "insertPkgPath": true,
        "removeComments": false,
        "strip": false
    },
    "sourceMap": true
}
{
    "autoImportComponentScript": true,
    "createPackage": false,
    "diagnosticFilters": [
        {
            "src": "**/roku_modules/**/*.*"
        },
        1090
    ],
    "diagnosticLevel": "error",
    "files": [
        "source/**/*",
        "components/**/*",
        "images/**/*",
        "fonts/**/*",
        "config/**/*",
        "www/**/*.*",
        "manifest"
    ],
    "lintConfig": "config/bslint.jsonc",
    "plugins": [
        "roku-log-bsc-plugin",
        "@rokucommunity/bslint",
        "../scripts/asynctask-plugin.ts"
    ],
    "retainStagingDir": true,
    "require": [
        "ts-node/register"
    ],
    "rokuLog": {
        "insertPkgPath": true,
        "removeComments": false,
        "strip": false
    },
    "rootDir": "../src/",
    "sourceMap": true,
    "stagingDir": "dist/build"
}
{
  "rootDir": "../src/",
  "stagingFolderPath": "build",
  "files": [
    "source/**/*",
    "components/**/*",
    "images/**/*",
    "fonts/**/*",
    "meta/**/*.*",
    "www/**/*.*",
    "manifest",
    "!**/*.spec.bs"
  ],
  "diagnosticLevel": "error",
  "diagnosticFilters": [
    {
      "src": "**/roku_modules/**/*.*"
    },
    {
      "src": "components/lib/**/*.*"
    },
    {
      "src": "source/webserver/**/*.*"
    },
    {
      "src": "source/services/**/*.*",
      "codes": [
        "LINT1001"
      ]
    }
  ],
  "retainStagingFolder": true,
  "emitDefinitions": true,
  "createPackage": false,
  "sourceMap": true,
  "lintConfig": "config/bslint.jsonc",
  "autoImportComponentScript": true,
  "plugins": [
    "roku-log-bsc-plugin",
    "@rokucommunity/bslint"
  ],
  "rokuLog": {
    "strip": false,
    "insertPkgPath": true
  }
}
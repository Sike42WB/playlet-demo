{
    "autoImportComponentScript": true,
    "createPackage": false,
    "diagnosticFilters": [
        {
            "src": "**/roku_modules/**/*.*"
        }
    ],
    "diagnosticLevel": "error",
    "files": [
        "source/**/*",
        "components/**/*",
        "images/**/*",
        "fonts/**/*",
        "config/**/*",
        "www/**/*.*",
        "manifest"
    ],
    "lintConfig": "config/bslint.jsonc",
    "plugins": [
        "roku-log-bsc-plugin",
        "@rokucommunity/bslint"
    ],
    "retainStagingFolder": true,
    "rokuLog": {
        "insertPkgPath": true,
        "removeComments": false,
        "strip": false
    },
    "rootDir": "../src/",
    "sourceMap": true,
    "stagingFolderPath": "dist/build"
}
import "pkg:/source/utils/General.bs"
import "pkg:/source/utils/StringUtils.bs"

function Init()
    m.top.url = `http://${GetLocalIpAddress()}:8888`
end function

function OnUrlSet()
    url = m.top.url

    qrCode = m.top.findNode("SettingsQRPoster")
    qrCode.text = url

    urlLabel = m.top.findNode("urlLabel")
    urlLabel.text = url
end function

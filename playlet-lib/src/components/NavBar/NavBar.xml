<component name="NavBar" extends="Group" includes="AutoBind,Focus">
    <interface>
        <field id="appController" type="node" />
        <field id="content" type="node" alias="ItemsList.content" />
        <field id="itemsList" type="node" bind="./ItemsList" />
        <field id="initialFocus" type="int" value="-1" />
    </interface>

    <children>
        <Rectangle
            id="SideBar"
            height="720"
            width="170"
            color="#242424"
            opacity="0.9"
            translation="[80,0]"
            visible="false">
        </Rectangle>

        <Rectangle
            height="720"
            width="80"
            color="#242424"
            opacity="0.9">

            <MarkupList
                id="ItemsList"
                itemSize="[220,50]"
                itemComponentName="NavBarComponent"
                focusFootprintBitmapUri="invalid"
                focusBitmapUri="pkg:/images/white.9.png"
                focusBitmapBlendColor="0xFF1C30FF"
                vertFocusAnimationStyle="floatingFocus"
                numRows="7"
                scrollSpeed="99999"
                itemSpacing="[0, 16]"
                translation="[15, 120]">
            </MarkupList>
        </Rectangle>
    </children>
</component>
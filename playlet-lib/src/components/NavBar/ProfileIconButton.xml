<component name="ProfileIconButton" extends="Group" includes="Focus">
    <interface>
        <field id="background" type="color" value="" />
        <field id="focusBackground" type="color" value="" />
        <field id="text" type="string" value="" />
        <field id="padding" type="integer" value="-1" />
        <field id="height" type="integer" value="" />
        <field id="width" type="integer" value="" />
        <field id="icon" type="string" value="" />
    </interface>
    <children>
        <Poster id="buttonBackground" uri="pkg:/images/white.9.png" visible="false" />
        <Poster id="buttonIcon" />
        <Poster
            id="circlePoster"
            width="40"
            height="40"
            uri="pkg:/images/white-circle.png">
            <Poster
                id="circlePosterInner"
                width="36"
                height="36"
                blendColor="#9696c8"
                uri="pkg:/images/white-circle.png"
                translation="[2,2]">
                <Label
                    id="LetterLabel"
                    width="40"
                    height="40"
                    vertAlign="center"
                    horizAlign="center">
                    <Font role="font" uri="font:SystemFontFile" size="24" />
                </Label>
            </Poster>
        </Poster>

        <Label id="buttonText" color="#aaaaaa" font="font:SmallestSystemFont" vertAlign="center" horizAlign="center" visible="false" />
    </children>

</component>
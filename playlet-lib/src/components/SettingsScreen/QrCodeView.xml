<?xml version="1.0" encoding="UTF-8"?>

<component name="QrCodeView" extends="Group">
    <interface>
        <field id="key" type="string" />
        <field id="level" type="int" />
        <field id="url" type="string" onChange="OnUrlSet" />
        <field id="container" type="node" onChange="OnContainer"/>
        <field id="settings" type="node" onChange="OnSettingsScreen"/>
    </interface>
    <children>
        <Label
            height='60'
            width='600'
            font='font:MediumBoldSystemFont'
            horizAlign="center"
            translation="[80,100]"
            text="Open in a web browser to configure Playlet:"
        />
        <QRPoster
            id='SettingsQRPoster'
            loadWidth='400'
            loadHeight='400'
            loadPadding='20'
            translation='[180, 170]' />

        <Label
            id='UrlLabel'
            height='50'
            width='600'
            font='font:MediumBoldSystemFont'
            horizAlign="center"
            translation="[80,610]"
        />
    </children>
</component>
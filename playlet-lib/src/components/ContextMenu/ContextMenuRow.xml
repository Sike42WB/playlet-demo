<component name="ContextMenuRow" extends="Group">
    <interface>
        <field id="text" type="string" alias="label.text" />
        <field id="font" type="node" alias="label.font" />
        <field id="color" type="color" alias="label.color" />
        <field id="itemContent" type="node" onChange="OnContentSet" />
        <field id="itemHasFocus" type="boolean" onChange="OnItemHasFocus" />
        <field id="listHasFocus" type="boolean" />
        <field id="focusPercent" type="float" onChange="OnFocusPercent" />
    </interface>
    <children>
        <ScrollingLabel
            id="label"
            maxWidth="420"
            height="50"
            vertAlign="center"
            font="font:SmallestSystemFont" />
    </children>
</component>
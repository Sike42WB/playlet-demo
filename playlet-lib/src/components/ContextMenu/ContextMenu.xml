<component name="ContextMenu" extends="Group" includes="Focus">
    <interface>
        <field id="thumbnail" type="uri" alias="thumbnail.uri" />
        <field id="title" type="string" alias="titleLabel.text" />
        <field id="subtitle" type="string" alias="subtitleLabel.text" />
        <field id="options" type="nodearray" onChange="OnOptionsSet" />
        <field id="appController" type="node" />
        <function name="Show" />
    </interface>
    <children>
        <Rectangle
            id="background"
            width="1280"
            height="720"
            color="#000000"
            opacity="0" />
        <Rectangle
            id="container"
            width="470"
            height="720"
            translation="[-470,0]"
            color="0x242424">
            <Poster
                id="thumbnail"
                width="190"
                height="110"
                loadDisplayMode="scaleToFit"
                translation="[40,50]" />

            <LayoutGroup
                translation="[40,180]"
                itemSpacings="[10]">
                <Label
                    id="titleLabel"
                    width="390"
                    maxLines="2"
                    font="font:MediumBoldSystemFont"
                    wrap="true" />
                <Label
                    id="subtitleLabel"
                    width="390"
                    font="font:SmallestBoldSystemFont"
                    wrap="true" />
            </LayoutGroup>

            <MarkupList
                id="optionsList"
                itemSize="[420,50]"
                translation="[25,310]"
                itemComponentName="ContextMenuRow"
                vertFocusAnimationStyle="floatingFocus"
                numRows="7" />
        </Rectangle>

        <Animation id="showAnimation"
            duration="0.3"
            optional="true">
            <FloatFieldInterpolator
                id="fadeInterpolator"
                key="[0.0, 0.5, 1.0]"
                keyValue="[0.0, 0.4, 0.8]"
                fieldToInterp="background.opacity" />
            <Vector2DFieldInterpolator
                id="translationInterpolator"
                key="[0.0, 0.5, 1.0]"
                keyValue="[[-470,0], [-235,0], [0,0]]"
                fieldToInterp="container.translation" />
        </Animation>
    </children>
</component>
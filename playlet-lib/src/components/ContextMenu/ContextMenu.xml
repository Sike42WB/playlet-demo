<component name="ContextMenu" extends="Group" includes="AutoBind,Focus">
    <interface>
        <field id="thumbnail" type="uri" alias="thumbnail.uri" />
        <field id="title" type="string" alias="titleLabel.text" />
        <field id="subtitle" type="string" alias="subtitleLabel.text" />
        <field id="menu" type="array" onChange="OnMenuSet" />
        <field id="appController" type="node" bind="/AppController" />
    </interface>
    <children>
        <Rectangle
            width="1280"
            height="720"
            color="#000000"
            opacity="0.8" />
        <Rectangle
            width="470"
            height="720"
            color="0x242424" />

        <Poster
            id="thumbnail"
            width="190"
            height="110"
            loadDisplayMode="scaleToFit"
            translation="[40,50]" />

        <LayoutGroup
            translation="[40,180]"
            itemSpacings="[10]">
            <Label
                id="titleLabel"
                width="390"
                maxLines="2"
                font="font:MediumBoldSystemFont"
                wrap="true" />
            <Label
                id="subtitleLabel"
                width="390"
                font="font:SmallestBoldSystemFont"
                wrap="true" />
        </LayoutGroup>

        <ButtonGroup
            id="buttonGroup"
            minWidth="420"
            maxWidth="420"
            iconUri=""
            focusedIconUri=""
            translation="[25,310]"
            textFont="font:SmallestSystemFont"
            focusedTextFont="font:SmallestBoldSystemFont" />
    </children>
</component>
<?xml version="1.0" encoding="UTF-8"?>

<component name="MainScene" extends="Group" includes="AutoBind">
    <children>
        <AppController id="AppController" root="NavBar">
            <Group id="Screens">
                <!-- Loadable sub-component -->
                <SearchScreen id="SearchScreen" />
                <HomeScreen id="HomeScreen" />
                <SettingsScreen id="SettingsScreen" />
                <WebAppScreen id="WebAppScreen" />
                <AppInoScreen id="AppInoScreen" />
            </Group>

            <NavBar id="NavBar">
                <NavBarItem screen="SearchScreen" text="Search" icon="pkg:/images/icons/search.png" canFocus="true" />
                <NavBarItem screen="HomeScreen" text="Home" icon="pkg:/images/icons/home.png" canFocus="true" />
                <NavBarItem screen="SettingsScreen" text="Settings" icon="pkg:/images/icons/settings.png" canFocus="true" />
                <NavBarItem screen="WebAppScreen" text="Web App" icon="pkg:/images/icons/phone.png" />
                <NavBarItem screen="AppInoScreen" text="Info" icon="pkg:/images/icons/info.png" />
            </NavBar>

            <VideoContainer id="VideoContainer" />
            <Notifications id="Notifications" />

            <!-- No render nodes -->
            <Playlist id="Playlist" />
            <Preferences id="Preferences" />

            <!-- Inherits from WebServer -->
            <PlayletWebServer id="WebServer" port="8888" />
            <WebSocketServer id="WebSocketServer" webserver="ref:../WebServer" />
        </AppController>
    </children>
</component>
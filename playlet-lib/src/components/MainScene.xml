<?xml version="1.0" encoding="UTF-8"?>

<component name="MainScene" extends="Group" includes="AutoBind">
    <children>
        <AppController id="AppController" root="bind:./AppRoot" screensNode="bind:./Screens">
            <AppRoot id="AppRoot" appController="bind:..">
                <Group>
                    <Group id="Screens">
                    </Group>

                    <NavBar id="NavBar" focusIndex="1" appController="bind:/AppController">
                        <ContentNode role="items">
                            <NavBarItem
                                screen="SearchScreen"
                                text="Search"
                                icon="pkg:/images/icons/search.png"
                                canFocus="true">
                            </NavBarItem>
                            <NavBarItem
                                screen="HomeScreen"
                                text="Home"
                                icon="pkg:/images/icons/home.png"
                                canFocus="true">
                            </NavBarItem>
                            <NavBarItem
                                screen="SettingsScreen"
                                text="Settings"
                                icon="pkg:/images/icons/settings.png"
                                canFocus="true">
                            </NavBarItem>
                            <NavBarItem
                                screen="WebAppScreen"
                                text="Web App"
                                icon="pkg:/images/icons/phone.png">
                            </NavBarItem>
                            <NavBarItem
                                screen="AppInfoScreen"
                                text="Info"
                                icon="pkg:/images/icons/info.png">
                            </NavBarItem>

                        </ContentNode>
                    </NavBar>
                </Group>
            </AppRoot>


            <!-- <VideoContainer id="VideoContainer" />
            <Notifications id="Notifications" />

            No render nodes
            <Playlist id="Playlist" /> -->
            <Preferences id="Preferences" />

            <!-- Inherits from WebServer
            <PlayletWebServer id="WebServer" port="8888" />
            <WebSocketServer id="WebSocketServer" webserver="ref:../WebServer" /> -->
        </AppController>
    </children>
</component>
<component name="ChannelView" extends="Group" includes="AutoBind,Focus,ContextMenuProvider,Disposable">
    <interface>
        <field id="content" type="node" onChange="OnContentSet" />
        <field id="authorId" type="string" onChange="OnAuthorIdChange" />
        <field id="appController" type="node" bind="/AppController" />
        <field id="invidious" type="node" bind="/Invidious" />
        <field id="bookmarks" type="node" bind="/Bookmarks" />
    </interface>
    <children>
        <Rectangle
            width="1280"
            height="720"
            color="0x242424">
        </Rectangle>

        <Poster
            id="banner"
            width="1280"
            visible="false" />

        <Group id="container">
            <Poster
                translation="[115,20]"
                width="104"
                height="104"
                uri="pkg:/images/circle-mask-500.png">

                <CirclePoster
                    id="thumbnail"
                    width="100"
                    height="100"
                    translation="[2,2]"
                    failedBitmapUri="pkg:/images/thumbnail-missing.jpg" />

                <Label
                    id="authorLabel"
                    translation="[115,40]"
                    font="font:MediumBoldSystemFont" />
            </Poster>

            <Button
                id="subscribeButton"
                iconUri=""
                focusedIconUri=""
                showFocusFootprint="true"
                minWidth="200"
                translation="[930,64]" />

            <VideoRowList
                itemComponentName="RowCell"
                id="rowList"
                focusable="false"
                translation="[0,160]"
                numRows="2"
                rowitemSize="[[350,196]]"
                rowItemSpacing="[[25,0]]"
                itemSize="[1280,326]"
                itemSpacing="[0,65]"
                rowLabelOffset="[[115,20]]"
                focusXOffset="[115]"
                showRowLabel="[true]"
                rowFocusAnimationStyle="floatingfocus"
                variableWidthItems="true"
                focusBitmapUri="pkg:/images/focus_grid.9.png" />

            <Animation
                id="scrollAnimation"
                delay="0.3"
                duration="0.6">
                <Vector2DFieldInterpolator
                    id="bannerTranslation"
                    key="[ 0.0, 0.5, 1.0 ]"
                    fieldToInterp="banner.translation" />
                <Vector2DFieldInterpolator
                    id="containerTranslation"
                    key="[ 0.0, 0.5, 1.0 ]"
                    fieldToInterp="container.translation" />
            </Animation>

        </Group>
    </children>
</component>
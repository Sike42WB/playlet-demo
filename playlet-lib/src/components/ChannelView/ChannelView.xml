<component name="ChannelView" extends="Group" includes="AutoBind,Focus">
    <interface>
        <field id="content" type="node" onChange="OnContentSet" />
        <field id="appController" type="node" bind="/AppController" />
        <field id="invidious" type="node" bind="/Invidious" />
    </interface>
    <children>
        <Rectangle
            width="1280"
            height="720"
            color="0x242424">
        </Rectangle>

        <Poster
            id="banner"
            translation="[0,0]"
            width="1280" />

        <Poster
            translation="[115,180]"
            width="104"
            height="104"
            uri="pkg:/images/circle-mask-500.png">
            <!-- TODO:P0 figure out why the masksize need to be 150 but the image is 100 -->
            <MaskGroup
                translation="[2,2]"
                masksize="[150,150]"
                maskuri="pkg:/images/circle-mask-500.png">
                <Poster
                    id="thumbnail"
                    width="100"
                    height="100" />
            </MaskGroup>
        </Poster>

        <Label
            id="authorLabel"
            translation="[228,226]"
            font="font:MediumBoldSystemFont" />

        <VideoRowList
            itemComponentName="RowCell"
            id="rowList"
            focusable="false"
            translation="[0,320]"
            numRows="1"
            rowitemSize="[[350,196]]"
            rowItemSpacing="[[25,0]]"
            itemSize="[1280,326]"
            itemSpacing="[0,65]"
            rowLabelOffset="[[115,20]]"
            focusXOffset="[115]"
            showRowLabel="[true]"
            rowFocusAnimationStyle="floatingfocus"
            variableWidthItems="true"
            focusBitmapUri="pkg:/images/focus_grid.9.png" />
    </children>
</component>
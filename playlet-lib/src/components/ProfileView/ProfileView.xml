<component name="ProfileView" extends="Group" includes="AutoBind,Focus,Disposable">
    <interface>
        <field id="content" type="node" onChange="OnContentSet" />
        <field id="letter" type="string" alias="LetterLabel.text" />
        <field id="username" type="string" alias="UsernameLabel.text" />
        <field id="serverUrl" type="string" alias="ServerLabel.text" />
        <field id="circlePosterInnerUri" type="uri" alias="circlePosterInner.uri" />
        <field id="circlePosterInnerBlendColor" type="uri" alias="circlePosterInner.blendColor" />
        <field id="crownVisible" type="boolean" alias="CrownPoster.visible" />

        <field id="appController" type="node" bind="/AppController" />
        <field id="profiles" type="node" bind="/Profiles" />
    </interface>
    <children>
        <Rectangle
            width="1280"
            height="720"
            color="#000000"
            opacity="0.5">
        </Rectangle>
        <Rectangle
            width="720"
            height="420"
            translation="[280,150]"
            color="#242424">

            <Group translation="[100,90]">
                <Poster
                    id="circlePoster"
                    width="160"
                    height="160"
                    translation="[20,20]"
                    uri="pkg:/images/white-circle.png">
                    <Poster
                        id="circlePosterInner"
                        width="152"
                        height="152"
                        blendColor="#9696c8"
                        uri="pkg:/images/white-circle.png"
                        translation="[4,4]">
                        <Label
                            id="LetterLabel"
                            width="152"
                            height="152"
                            vertAlign="center"
                            horizAlign="center">
                            <Font role="font" uri="font:SystemFontFile" size="120" />
                        </Label>
                    </Poster>
                    <Poster
                        id="CrownPoster"
                        width="60"
                        height="60"
                        translation="[50,-60]"
                        uri="pkg:/images/icons/crown.png"
                        visible="false">
                    </Poster>
                </Poster>
                <Label
                    id="UsernameLabel"
                    width="200"
                    horizAlign="center"
                    translation="[0,210]">
                    <Font role="font" uri="font:BoldSystemFontFile" size="26" />
                </Label>
                <Label
                    id="ServerLabel"
                    width="400"
                    horizAlign="center"
                    translation="[-100,250]">
                    <Font role="font" uri="font:SystemFontFile" size="18" />
                </Label>
            </Group>

            <LayoutGroup
                translation="[420,94]"
                itemSpacings="[20,20]">
                <Button
                    id="activateButton"
                    text="Activate"
                    minWidth="200"
                    showFocusFootprint="true" />
                <Button
                    id="logoutButton"
                    text="Logout"
                    minWidth="200"
                    showFocusFootprint="true" />
                <Button
                    id="closeButton"
                    text="Close"
                    minWidth="200"
                    showFocusFootprint="true" />
            </LayoutGroup>
        </Rectangle>
    </children>
</component>
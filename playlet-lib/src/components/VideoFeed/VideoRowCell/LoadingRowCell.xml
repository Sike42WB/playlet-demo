<?xml version="1.0" encoding="UTF-8"?>

<component name="LoadingRowCell" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="OnContentSet" />
        <field id="index" type="integer" onChange="OnIndexSet" />
        <field id="type" type="string" value="loading" />
    </interface>
    <children>
        <Rectangle
            id="background"
            width="350"
            height="196"
            color="0xd1d1d1"
            opacity="0.8" />

        <Animation
            id="loadingAnimation"
            duration="3"
            easeFunction="linear"
            repeat="true"
            optional="true">
            <ColorFieldInterpolator
                id="colorInterpolator"
                key="[0.0, 0.5, 1.0]"
                keyValue="[0xd1d1d1ff, 0x7d7d7dff, 0xd1d1d1ff]"
                fieldToInterp="background.color" />
        </Animation>
    </children>
</component>
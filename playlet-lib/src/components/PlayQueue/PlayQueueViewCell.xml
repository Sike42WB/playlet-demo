<component name="PlayQueueViewCell" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="OnContentSet" />
        <field id="index" type="integer" />
        <field id="title" type="string" alias="titleLabel.text" />
        <field id="thumbnailUri" type="uri" alias="thumbnailPoster.uri" />
        <field id="thumbnailBlendColor" type="color" alias="thumbnailPoster.blendColor" />
        <field id="highlightUri" type="uri" alias="highlightPoster.uri" />
        <field id="duration" type="string" alias="durationLabel.text" />
        <field id="durationRectVisible" type="boolean" alias="durationRect.visible" />
    </interface>
    <children>
        <Poster
            id="thumbnailPoster"
            loadDisplayMode="scaleToZoom"
            width="160"
            height="90"
            failedBitmapUri="pkg:/images/thumbnail-missing.jpg"
            translation="[2,2]">
            <Rectangle
                id="durationRect"
                width="60"
                height="26"
                color="0x000000"
                opacity="0.8"
                translation="[100, 58]">
                <Label
                    height="26"
                    id="durationLabel"
                    horizAlign="center"
                    vertAlign="center"
                    font="font:SmallestSystemFont"
                    translation="[8, 0]" />
            </Rectangle>
        </Poster>
        <Poster
            id="highlightPoster"
            blendColor="0xFF0000"
            width="164"
            height="94" />

        <Label
            id="titleLabel"
            width="260"
            font="font:SmallestBoldSystemFont"
            maxLines="3"
            wrap="true"
            translation="[172,2]" />
    </children>
</component>
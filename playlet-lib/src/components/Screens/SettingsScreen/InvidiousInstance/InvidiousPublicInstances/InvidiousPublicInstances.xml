<component name="InvidiousPublicInstances" extends="Group" includes="Focus">
    <interface>
        <field id="instance" type="string" />
    </interface>
    <children>
        <BusySpinner
            id="busySpinner"
            spinInterval="1"
            translation="[380,96]" />
        <Label
            id="failedLabel"
            text="Failed to load Invidious public instances."
            horizAlign="center"
            translation="[180,60]"
            width="500" />

        <ButtonEx
            id="refreshButton"
            iconVisible="false"
            text="Refresh"
            anchor="[0.5,0]"
            padding="[30,30]"
            translation="[430,130]" />

        <InvidiousPublicInstancesListItem id="instancesHeader">
            <InvidiousPublicInstancesListItemContent
                role="itemContent"
                name="name"
                version="version"
                users="users"
                signup="signup"
                location="location"
                health="health" />
        </InvidiousPublicInstancesListItem>

        <MarkupGrid
            id="instances"
            itemComponentName="InvidiousPublicInstancesListItem"
            itemSize="[810,16]"
            itemSpacing="[0,20]"
            numColumns="1"
            numRows="7"
            vertFocusAnimationStyle="floatingFocus"
            translation="[0,46]"
            focusBitmapUri="pkg:/images/white-border.9.png" />

    </children>
</component>
                translation="[670,50]" />
            <Label
                text="OR"
                translation="[460,110]">
                <Rectangle
                    width="250"
                    height="1"
                    translation="[-282,10]" />

                <Rectangle
                    width="250"
                    height="1"
                    translation="[71,10]" />

            </Label>

            <Label
                text="Invidious public instances"
                translation="[328,145]" />

            <InvidiousPublicInstances
                id="instances"
                translation="[50,190]">

            </InvidiousPublicInstances>

            <ButtonEx
                id="testButton"
                text="Test instance"
                iconVisible="false"
                padding="[30,30]"
                translation="[300,510]" />
            <ButtonEx
                id="saveButton"
                text="Save"
                iconVisible="false"
                padding="[30,30]"
                translation="[545,510]" />
        </Rectangle>
    </children>

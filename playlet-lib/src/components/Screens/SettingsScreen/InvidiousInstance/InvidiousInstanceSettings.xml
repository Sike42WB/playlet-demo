        <field id="save" type="boolean" alwaysNotify="true" />
        <field id="appController" type="node" bind="/AppController" />
    </interface>
    <children>
        <Rectangle
            width="1280"
            height="720"
            color="#000000"
            opacity="0.5">
        </Rectangle>
        <Rectangle
            width="960"
            height="600"
            translation="[160,60]"
            color="#242424">
            <Label

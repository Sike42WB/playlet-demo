<component name="StringControl" extends="LayoutGroup" includes="Focus">
    <interface>
        <field id="displayText" type="string" alias="DisplayTextLabel.text" />
        <field id="description" type="string" alias="DescriptionLabel.text" />
        <field id="value" type="string" alias="Button.text" onChange="OnValueChange" />
        <function name="BindPreference" />
    </interface>
    <children>
        <Label id="DisplayTextLabel" width="450" />
        <Label id="DescriptionLabel"
            width="450"
            color="0xb4b4b4ff"
            wrap="true">
            <Font role="font" uri="font:SystemFontFile" size="18" />
        </Label>
        <Button id="Button"
            iconUri=""
            focusedIconUri=""
            showFocusFootprint="true"
            minWidth="420" />
    </children>
</component>
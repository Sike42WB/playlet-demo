<?xml version="1.0" encoding="UTF-8"?>

<component name="WebAppScreen" extends="Group">
    <interface>
        <field id="url" type="string" onChange="OnUrlSet" />
        <field id="qrCodeUrl" type="string" onChange="OnUrlSet" />
    </interface>
    <children>
        <Group id="noInternet" visible="false">
            <Label
                height='720'
                width='1280'
                font='font:MediumBoldSystemFont'
                horizAlign="center"
                vertAlign="center"
                text="Could not get IP address: are we connected to the internet?"
            />
        </Group>
        <Group id="yesInternet" visible="false">
            <Label
                height='60'
                width='1280'
                font='font:MediumBoldSystemFont'
                horizAlign="center"
                translation="[0,92]"
                text="Scan the QR code with your phone camera, or open the URL in a web browser:"
            />
            <QRPoster
                id='QrCodePoster'
                loadWidth='400'
                loadHeight='400'
                loadPadding='20'
                translation='[440, 160]' />

            <Label
                id='UrlLabel'
                height='50'
                width='1280'
                font='font:MediumBoldSystemFont'
                horizAlign="center"
                translation="[0,600]"
            />
        </Group>
    </children>
</component>
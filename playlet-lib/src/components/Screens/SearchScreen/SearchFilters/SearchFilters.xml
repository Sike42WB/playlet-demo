<component name="SearchFilters" extends="Group" includes="AutoBind,Focus">
    <interface>
        <field id="searchScreen" type="node" />
        <field id="appController" type="node" bind="/AppController" />
    </interface>
    <children>
        <Rectangle
            width="1280"
            height="720"
            color="#000000"
            opacity="0.5">
        </Rectangle>
        <Font id="HeaderFont" uri="font:MediumSystemFontFile" size="18" />
        <Font id="ItemFont" uri="font:SystemFontFile" size="18" />
        <Font id="ItemFocusedFont" uri="font:MediumSystemFontFile" size="18" />
        <Rectangle
            width="1200"
            height="543"
            translation="[40,84]"
            color="#242424">

            <LayoutGroup
                layoutDirection="horiz"
                translation="[20,20]">
                <LayoutGroup horizAlignment="center" itemSpacings="[10,10]">
                    <Label
                        text="Upload date"
                        font="dictionary:HeaderFont"
                        horizAlign="center"
                        width="188" />
                    <Rectangle
                        width="170"
                        height="1" />
                    <RadioButtonList
                        id="UploadDateList"
                        vertFocusAnimationStyle="floatingFocus"
                        font="dictionary:ItemFont"
                        focusedFont="dictionary:ItemFocusedFont"
                        itemSize="[170,42]">
                        <ContentNode role="content" />
                    </RadioButtonList>
                </LayoutGroup>

                <LayoutGroup horizAlignment="center" itemSpacings="[10,10]">
                    <Label
                        text="Type"
                        font="dictionary:HeaderFont"
                        horizAlign="center"
                        width="168" />
                    <Rectangle
                        width="150"
                        height="1" />
                    <RadioButtonList
                        id="TypeList"
                        vertFocusAnimationStyle="floatingFocus"
                        font="dictionary:ItemFont"
                        focusedFont="dictionary:ItemFocusedFont"
                        itemSize="[120,42]">
                        <ContentNode role="content" />
                    </RadioButtonList>
                </LayoutGroup>

                <LayoutGroup horizAlignment="center" itemSpacings="[10,10]">
                    <Label
                        text="Duration"
                        font="dictionary:HeaderFont"
                        horizAlign="center"
                        width="238" />
                    <Rectangle
                        width="220"
                        height="1" />
                    <RadioButtonList
                        id="DurationList"
                        vertFocusAnimationStyle="floatingFocus"
                        font="dictionary:ItemFont"
                        focusedFont="dictionary:ItemFocusedFont"
                        itemSize="[230,42]">
                        <ContentNode role="content" />
                    </RadioButtonList>
                </LayoutGroup>

                <LayoutGroup horizAlignment="center" itemSpacings="[10,10]">
                    <Label
                        text="Features"
                        font="dictionary:HeaderFont"
                        horizAlign="center"
                        width="258" />
                    <Rectangle
                        width="240"
                        height="1" />
                    <CheckList
                        id="FeaturesList"
                        vertFocusAnimationStyle="floatingFocus"
                        font="dictionary:ItemFont"
                        focusedFont="dictionary:ItemFocusedFont"
                        itemSize="[210,42]">
                        <ContentNode role="content" />
                    </CheckList>
                </LayoutGroup>

                <LayoutGroup horizAlignment="center" itemSpacings="[10,10]">
                    <Label
                        text="Sort by"
                        font="dictionary:HeaderFont"
                        horizAlign="center"
                        width="198" />
                    <Rectangle
                        width="180"
                        height="1" />
                    <RadioButtonList
                        id="SortList"
                        vertFocusAnimationStyle="floatingFocus"
                        font="dictionary:ItemFont"
                        focusedFont="dictionary:ItemFocusedFont"
                        itemSize="[190,42]">
                        <ContentNode role="content" />
                    </RadioButtonList>
                </LayoutGroup>
            </LayoutGroup>
        </Rectangle>
    </children>
</component>
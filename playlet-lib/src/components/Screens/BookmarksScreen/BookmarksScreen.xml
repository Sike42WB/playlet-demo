<component name="BookmarksScreen" extends="Group" includes="AutoBind,Focus">
    <interface>
        <field id="applicationInfo" type="node" bind="/ApplicationInfo" />
        <field id="bookmarks" type="node" bind="/Bookmarks" />
    </interface>
    <children>
        <Group id="noBookmarks" visible="false">
            <Label
                height='720'
                width='1280'
                font='font:MediumBoldSystemFont'
                horizAlign="center"
                vertAlign="center"
                text="You currently have no bookmarks.&#xA;&#xA;To add bookmarks, long-press 'OK' on a video, playlist or channel."
                wrap="true" />
        </Group>
        <Group id="yesBookmarks" visible="false">
            <VideoRowList
                itemComponentName="RowCell"
                id="rowList"
                translation="[0,50]"
                numRows="2"
                rowitemSize="[[350,196]]"
                rowItemSpacing="[[25,0]]"
                itemSize="[1280,326]"
                itemSpacing="[0,65]"
                rowLabelOffset="[[125,20]]"
                focusXOffset="[125]"
                showRowLabel="[true]"
                rowFocusAnimationStyle="floatingfocus"
                variableWidthItems="true"
                focusBitmapUri="pkg:/images/focus_grid.9.png"
            />
        </Group>
    </children>
</component>
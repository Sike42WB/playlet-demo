<component name="ProfileScreen" extends="Group" includes="AutoBind,Focus">
    <interface>
        <field id="navBar" type="node" bind="/NavBar" />
    </interface>

    <children>
        <ProfileView
            id="profileView"
            translation="[160,160]"
            numRows="2"
            rowitemSize="[[240,340]]"
            rowItemSpacing="[[0,0]]"
            itemSize="[1000,340]"
            focusXOffset="[100]"
            itemComponentName="ProfileViewCell"
            rowFocusAnimationStyle="floatingfocus"
            focusBitmapUri="pkg:/images/focus-glow-padding-19.9.png">
            <ContentNode role="content">
                <ContentNode>
                    <ProfileContentNode username="John">
                    </ProfileContentNode>
                    <ProfileContentNode username="Mark">
                    </ProfileContentNode>
                    <ProfileContentNode username="Stephanie">
                    </ProfileContentNode>
                </ContentNode>
            </ContentNode>
        </ProfileView>
    </children>

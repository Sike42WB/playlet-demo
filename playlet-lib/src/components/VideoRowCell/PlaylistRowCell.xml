<?xml version="1.0" encoding="UTF-8"?>

<component name="PlaylistRowCell" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="OnContentSet" />
    </interface>
    <children>
        <LayoutGroup
            itemSpacings="[24,5]"
        >
            <Poster
                id="thumbnail"
                loadDisplayMode="scaleToZoom"
                width="350"
                height="196"
            >
                <Rectangle
                    id="videoCountRect"
                    width="60"
                    height="26"
                    color="0x000000"
                    opacity="0.8"
                    translation="[290, 162]"
                >
                    <Label
                        height="26"
                        id="videoCountLabel"
                        horizAlign="center"
                        vertAlign="center"
                        font="font:SmallestSystemFont"
                        translation="[8, 0]"
                    />
                </Rectangle>
            </Poster>

            <Label
                id="titleLabel"
                width="350"
                font="font:SmallestBoldSystemFont"
                maxLines="2"
                wrap="true"
            />
            <Label
                id="authorLabel"
                width="350"
                height="25"
                font="font:SmallestSystemFont"
            />
        </LayoutGroup>
    </children>
</component>
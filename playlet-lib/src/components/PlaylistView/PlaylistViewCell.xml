<component name="PlaylistViewCell" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="OnContentSet" />
    </interface>
    <children>
        <Poster
            id="thumbnail"
            loadDisplayMode="scaleToZoom"
            width="190"
            height="106">
            <Rectangle
                id="durationRect"
                width="60"
                height="26"
                color="0x000000"
                opacity="0.8"
                translation="[130, 72]">
                <Label
                    height="26"
                    id="durationLabel"
                    horizAlign="center"
                    vertAlign="center"
                    font="font:SmallestSystemFont"
                    translation="[8, 0]" />
            </Rectangle>

        </Poster>

        <LayoutGroup
            itemSpacings="[5,5]"
            translation="[200,0]">
            <Label
                id="titleLabel"
                width="350"
                font="font:SmallestBoldSystemFont"
                maxLines="2"
                wrap="true" />
            <Label
                id="authorLabel"
                width="350"
                height="25"
                font="font:SmallestSystemFont" />
        </LayoutGroup>
    </children>

</component>
<component name="PlaylistView" extends="Group" includes="AutoBind,Focus">
    <interface>
        <field id="content" type="node" onChange="OnContentSet" />
        <field id="appController" type="node" bind="/AppController" />
    </interface>
    <children>
        <Rectangle
            width="1280"
            height="720"
            color="0x242424">
        </Rectangle>

        <Poster
            id="background"
            width="1280"
            height="720"
            blendColor="0x323232">
            <LayoutGroup
                itemSpacings="[5]"
                translation="[65,90]">
                <Label
                    id="titleLabel"
                    width="500"
                    maxLines="2"
                    wrap="true">
                    <Font role="font" uri="font:BoldSystemFontFile" size="36" />
                </Label>
                <Label
                    id="subtitleLabel"
                    width="500"
                    font="font:SmallestBoldSystemFont" />
            </LayoutGroup>

            <MarkupGrid
                id="list"
                itemComponentName="PlaylistViewCell"
                itemSize="[550,106]"
                itemSpacing="[0,20]"
                numColumns="1"
                numRows="5"
                vertFocusAnimationStyle="floatingFocus"
                translation="[620,90]" />

        </Poster>
    </children>
</component>
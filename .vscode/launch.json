{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "brightscript",
            "request": "launch",
            "envFile": "${workspaceFolder}/.vscode/.env",
            "host": "${env:ROKU_DEV_TARGET}",
            "password": "${env:ROKU_DEVPASSWORD}",
            "stopOnEntry": false,
            "enableDebuggerAutoRecovery": false,
            "stopDebuggerOnAppExit": false,
            "bsConst": {
                "DEBUG": true
            },
            "rootDir": "${workspaceFolder}/dist/build/playlet",
            "sourceDirs": [
                "${workspaceFolder}/playlet/src",
                "${workspaceFolder}/playlet-lib/src"
            ],
            "componentLibraries": [
                {
                    "rootDir": "${workspaceFolder}/dist/build/playlet-lib",
                    "outFile": "playlet-lib.zip",
                    "files": [
                        "source/**/*",
                        "components/**/*",
                        "images/**/*",
                        "fonts/**/*",
                        "config/**/*",
                        "www/**/*.*",
                        "manifest"
                    ]
                }
            ],
            "preLaunchTask": "build",
            "name": "Playlet (dev)",
            "injectRdbOnDeviceComponent": true,
            // For RALE, set the full path in settings.json
            "injectRaleTrackerTask": false
        },
        {
            "command": "npm run dev:web",
            "name": "Playlet Web (Dev)",
            "request": "launch",
            "type": "node-terminal"
        }
    ]
}
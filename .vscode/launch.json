{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "brightscript",
            "request": "launch",
            "envFile": "${workspaceFolder}/.vscode/.env",
            "host": "${env:ROKU_DEV_TARGET}",
            "password": "${env:ROKU_DEVPASSWORD}",
            "stopOnEntry": false,
            "enableDebuggerAutoRecovery": false,
            "stopDebuggerOnAppExit": false,
            "rootDir": "${workspaceFolder}/dist/build/playlet",
            "sourceDirs": [
                "${workspaceFolder}/playlet/src",
                "${workspaceFolder}/playlet-lib/src"
            ],
            "files": [
                "**/*",
            ],
            "preLaunchTask": "build",
            "name": "Playlet (dev)",
            "injectRdbOnDeviceComponent": true,
            "injectRaleTrackerTask": true,
            // TODO: change to ${workspaceFolder}/tools/RALE/TrackerTask.xml
            // Once https://github.com/rokucommunity/vscode-brightscript-language/pull/462 
            // is released (after v2.38.7)
            "raleTrackerTaskFileLocation": "/Users/brahim/Roku/playlet/tools/RALE/TrackerTask.xml"
        },
        {
            "command": "npm run dev:web",
            "name": "Playlet Web (Dev)",
            "request": "launch",
            "type": "node-terminal"
        }
    ]
}
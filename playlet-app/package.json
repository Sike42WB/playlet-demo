{
    "name": "playlet-app",
    "version": "0.10.2",
    "description": "Unofficial Youtube client for Roku",
    "dependencies": {
        "bslib": "npm:@rokucommunity/bslib@^0.1.1"
    },
    "ropm": {
        "rootDir": "./src",
        "noprefix": [
            "roku-requests"
        ]
    },
    "scripts": {
        "prebuild": "rm -rf dist/build/playlet-app",
        "build:dev": "bsc --create-package --debug=true --sourceMap=true --lintConfig ../config/bslint.jsonc",
        "build:prod": "bsc --create-package --debug=false --sourceMap=false --lintConfig ../config/bslint.jsonc",
        "lint": "bslint --project bsconfig.lint.json --lintConfig ../config/bslint.jsonc",
        "lint:fix": "npm run lint -- --fix",
        "format:base": "bsfmt \"src/**/*.brs\" \"src/**/*.bs\" \"!src/components/lib/**/*\" \"!src/source/lib/**/*\" \"!**/bslib.brs\" \"!**/roku_modules/**/*\" --bsfmt-path ../config/bsfmt.jsonc",
        "format": "npm run format:base -- --check",
        "format:fix": "npm run format:base -- --write",
        "test": "npm run test:build && npm run test:run",
        "test:build": "bsc --project bsconfig.tests.json --create-package --debug=true --lintConfig ../config/bslint.jsonc",
        "test:run": "node ../tools/run-test-app.js --package ../dist/build/playlet-app-tests.zip",
        "postinstall": "npx ropm copy"
    }
}
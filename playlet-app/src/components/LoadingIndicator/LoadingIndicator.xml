<component name="LoadingIndicator" extends="Group">
    <interface>
        <field id="message" type="string" alias="messageLabel.text" />
    </interface>
    <children>
        <Rectangle
            width="1280"
            height="720"
            color="#000000"
            opacity="0.5">
            <BusySpinner
                id="busySpinner"
                inheritParentOpacity="false"
                spinInterval="1" />
            <Label
                id="messageLabel"
                inheritParentOpacity="false"
                width="1280"
                height="200"
                horizAlign="center"
                translation="[0,460]"
                wrap="true">
                <Font role="font" uri="font:SystemFontFile" size="28" />
            </Label>
        </Rectangle>
    </children>
</component>